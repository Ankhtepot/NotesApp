<UserControl x:Class="NotesApp.View.UserControlls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock x:Name="titleTextBlock"
                       Text="Note title"
                       FontSize="15"
                       FontWeight="Bold"/>
        <TextBlock x:Name="editedTextBlock"
                       Text="19 minutes"
                       FontSize="12"
                   Margin=" 0 10 0 0"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="contentTextBlock"
                       Text="Lorem Ipsum , on amat blabla bluuu graaa ghamana grsad as dsd."
                       FontSize="12"
                   Foreground="DarkGray"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
